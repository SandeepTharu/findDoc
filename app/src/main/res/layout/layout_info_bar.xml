<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_curve"
    android:backgroundTint="@color/MediumPurple"
    android:elevation="10dp"
    android:layout_margin="10dp"
    >
    <ImageView
        android:id="@+id/imageViewInfoBarLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_find_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        />
    <com.example.finddoc.views.CustomTextview
        android:id="@+id/textViewInfoBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Doc"
        android:textColor="@color/White"
        android:textSize="18sp"
        app:customTextStyle="bold"
        android:padding="20dp"
        app:layout_constraintStart_toEndOf="@id/imageViewInfoBarLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        />
</androidx.constraintlayout.widget.ConstraintLayout>